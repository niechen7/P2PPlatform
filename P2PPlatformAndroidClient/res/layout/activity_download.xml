<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical">
    
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    
	    <TextView
	        android:id="@+id/download_url_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/download_url_title"/>
	    
	    <EditText
	        android:id="@+id/download_url"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:inputType="textUri"
	        android:hint="@string/download_url_hint"
	    />
	    
	    <TextView
	        android:id="@+id/download_thread_count_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/download_thread_count"/>
	    
	    <Spinner
	        android:id="@+id/download_thread_count"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>
	    
	    <Button
	        android:id="@+id/download"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/btn_download"
	        android:onClick="download"/>
	    
	    <View  
	   		android:layout_width="fill_parent"  
	    	android:layout_height="3px" 
	   		android:background="?android:attr/listDivider"/>
	    
	    <LinearLayout
	        android:id="@+id/combine_file_info"
	    	android:orientation="vertical"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
	    	
	        <TextView
	        	android:id="@+id/combine_file_title"
	        	android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:textColor="#FF0000"/>
	        
	        <ProgressBar   
        		android:id="@+id/combine_file_pg"   
        		android:layout_width="fill_parent"   
        		android:layout_height="wrap_content"   
        		style="?android:attr/progressBarStyleHorizontal"/>  
    
    		<TextView
        		android:id="@+id/combine_file_result"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:textColor="#00FF00"
        		android:onClick="openGetFile"/>
    		
    		<TextView
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"/>
    
    		<View  
   				android:layout_width="fill_parent"  
    			android:layout_height="3px" 
   				android:background="?android:attr/listDivider"/>
	        
	    </LinearLayout>
	    
	    <TextView
	        	android:id="@+id/download_file_info"
	        	android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:textColor="#FF0000"/>
	    
	    <LinearLayout
	        android:id="@+id/download_info"
	    	android:orientation="vertical"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
    		    
	     </LinearLayout>   
	    
	</LinearLayout>
</ScrollView>